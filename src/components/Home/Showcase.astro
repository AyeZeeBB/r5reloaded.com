---
import { Image } from 'astro:assets';
const imageFiles = await Astro.glob('/src/assets/img/showcase/*');
---

<div class="black-background">
  <div class="pic-ctn">
    {
      imageFiles.map((img) => (
        <Image
          src={img.default}
          alt=""
          class="pic"
        />
      ))
    }
  </div>
</div>

<script>
  const images = document.querySelectorAll('.pic-ctn > img');
  const animationDuration = images.length * 2.5; // total duration of the animation in seconds
  const totalImages = images.length;
  const imageVisibleTime = animationDuration / totalImages; // time each image is visible

  let currentIndex = 0;

  function showNextImage() {
    // Hide all images
    images.forEach((img, index) => {
      img.style.opacity = 0;
      img.style.transition = `opacity ${imageVisibleTime / 2}s ease-in-out`;
    });

    // Show the current image
    images[currentIndex].style.opacity = 1;

    // Move to the next image
    currentIndex = (currentIndex + 1) % totalImages;

    // Schedule the next image
    setTimeout(showNextImage, imageVisibleTime * 1000);
  }

  // Start the animation
  showNextImage();
</script>



<style>
  .black-background {
    margin-top: 50px;
    padding: 0;
    background-color: #1f2122;
    border-radius: 5px;
  }

  .pic-ctn {
    width: 100%;
    height: 700px; /* Adjust the height of the container as needed */
    position: relative;
    overflow: hidden; /* To ensure the child images are clipped within the container */
  }

  .pic-ctn > img {
    position: absolute;
    top: 0;
    opacity: 0; /* Start with images hidden */
    width: 100%;
    height: 100%;
    transition: opacity 0.5s ease-in-out; /* Smooth transition */
