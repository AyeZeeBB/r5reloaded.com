<script>
    // Fetch server data
const fetchData = async () => {
    const response = await fetch("https://ms.r5reloaded.com/servers", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
    });

    const serverListing = await response.json();
    const servers = serverListing.servers;

    let totalPlayers = 0;

    servers.forEach((server) => {
        if (server.map && server.playlist && server.map !== "" && server.maxPlayers !== 0) {
            totalPlayers += Number(server.playerCount);
        }
    });

    // Update element with total players
    document.getElementById("totalPlayers").textContent = totalPlayers.toString();
    
    // Trigger floating animation
    document.getElementById("floatingElement").classList.add("float-down");
};

// Execute fetch data function on page load
window.addEventListener("load", fetchData);

</script>

