---
interface Props {
  active: string;
}

const { active } = Astro.props;

//not sure if this is the right way to do this
// but it should work for now
const getClassName = (section: string) => {
  return active === section ? "activebtn" : "btn";
};
---

<div class="container">
  <div class="row">
    <div class="header">
      <div class="logo">
        <a href="./index.php">
          <img src="./img/R5R-Logo-White.gif" alt="logo" width="80" />
        </a>
      </div>
      <input type="checkbox" id="toggle" />
      <div class="navmenu">
        <a class={getClassName("home")} href="./">Home</a>
        <a class={getClassName("servers")} href="./servers">Servers</a>
        <a class="btn" href="https://docs.r5reloaded.com/">Docs</a>
        <a class={getClassName("contributors")} href="./contributors">Contributors</a>
        <a class={getClassName("download")} href="./download">Download</a>
      </div>
      <label class="navbar-toggler" for="toggle">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
      </label>
    </div>
  </div>
</div>

<style>
  .header {
    display: flex;
    position: sticky;
    width: 100%;
    justify-content: space-around;
    align-items: center;
  }
  .logo a {
    display: flex;
    padding-right: 50px;
    border-right: solid 1px var(--dark);
  }
  .navmenu {
    display: flex;
    align-items: center;
  }

  .btn {
    margin-right: 30px;
    font-size: 14px;
    text-align: center;
    background-color: transparent;
    text-decoration: none;
    color: var(--light);
    cursor: pointer;
    border: none;
  }

  .activebtn {
    margin-right: 30px;
    font-size: 14px;
    text-align: center;
    background-color: transparent;
    text-decoration: none;
    color: var(--red);
    cursor: pointer;
    border: none;
    font-style;
  }

  .navmenu a:hover {
    color: var(--red);
  }
  .header .navbar-toggler {
    display: none;
    height: min-content;
    margin: 18px 10px 5px 0;
    cursor: pointer;
  }
  .header .navbar-toggler .bar {
    width: 40px;
    height: 5px;
    margin-bottom: 10px;
    background: var(--red);
    border-radius: 10%;
    transition: 0.4s;
  }
  .header input {
    display: none;
  }

  @media (max-width: 992px) {
    .header {
      display: flex;
      justify-content: space-between;
    }
    .navmenu {
      display: grid;
      position: absolute;
      width: 100%;
      align-items: center;
      transform: translateY(-100%);
      transition: 0.6s;
      background-color: var(--white);
      z-index: -1;
    }
    .header .navbar-toggler {
      display: grid !important;
    }
    .logo a {
      border: none;
    }
    .navmenu > .btn {
      width: 100%;
      padding: 20px;
      border-bottom: 1px solid var(--light);
    }
    .header input:checked ~ .navmenu {
      transform: translateY(70%);
    }
    .header input:checked ~ .navbar-toggler {
      margin-top: 20px;
    }
    input:checked ~ .navbar-toggler .bar:nth-child(1) {
      position: absolute;
      transform: rotate(45deg);
    }
    input:checked ~ .navbar-toggler .bar:nth-child(2) {
      display: none;
    }
    input:checked ~ .navbar-toggler .bar:nth-child(3) {
      transform: rotate(-45deg);
    }
    .btn {
      margin: 0;
    }
  }
</style>
